<style>
  .footer {
    background: var(--color-bg);
    color: var(--color-text);
    padding: 60px 24px 32px;
    border-top: 1px solid var(--color-border);
  }

  .footer-content {
    text-align: center;
    margin-bottom: 40px;
  }

  .footer-name {
    font-size: 1.6rem;
    font-weight: 700;
    margin-bottom: 24px;
    letter-spacing: -0.01em;
    color: var(--color-accent);
  }

  .footer-links {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 14px;
  }

  .footer-link {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    font-size: 0.95rem;
    color: var(--color-text-secondary);
    transition: color 0.2s ease;
  }

  .footer-link:hover {
    color: var(--color-accent);
  }

  .footer-bottom {
    border-top: 1px solid var(--color-border);
    padding-top: 24px;
    text-align: center;
  }

  .copyright {
    font-size: 0.85rem;
    color: var(--color-text-secondary);
    margin-bottom: 6px;
  }

  .credit {
    font-size: 0.75rem;
    color: #9ca3af;
  }

  .credit a {
    color: var(--color-accent);
    text-decoration: underline;
    text-underline-offset: 2px;
    transition: color 0.2s ease;
  }

  .credit a:hover {
    color: var(--color-accent-hover);
  }

  @media (max-width: 768px) {
    .footer {
      padding: 48px 20px 24px;
    }

    .footer-name {
      font-size: 1.3rem;
    }

    .footer-link {
      font-size: 0.9rem;
    }
  }
</style>
