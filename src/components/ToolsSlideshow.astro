---
const tools = [
  { src: '/tools/photoshop.png', alt: 'Adobe Photoshop' },
  { src: '/tools/indesign.png', alt: 'Adobe InDesign' },
  { src: '/tools/lightroom.png', alt: 'Adobe Lightroom' },
  { src: '/tools/acrobat.png', alt: 'Adobe Acrobat' },
  { src: '/tools/illustrator.svg', alt: 'Adobe Illustrator' },
  { src: '/tools/figma.png', alt: 'Figma' },
  { src: '/tools/coreldraw.png', alt: 'CorelDRAW' },
  { src: '/tools/caldera.png', alt: 'Caldera RIP' },
  { src: '/tools/versaworks.png', alt: 'VersaWorks' },
  { src: '/tools/tool-01.png', alt: 'Tool' },
  { src: '/tools/tool-02.png', alt: 'Tool' },
  { src: '/tools/tool-04.jpeg', alt: 'Tool' },
  { src: '/tools/tool-05.png', alt: 'Tool' },
  { src: '/tools/tool-06.webp', alt: 'Tool' },
];
---

<section class="tools-section">
  <div class="container">
    <h2 class="section-title fade-in">Tools & Softwares</h2>
    <div class="tools-grid fade-in fade-in-delay-1">
      {tools.map(tool => (
        <div class="grid-item">
          <img src={tool.src} alt={tool.alt} loading="lazy" />
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .tools-section {
    background: var(--color-bg-alt);
  }

  .tools-grid {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    gap: 32px 24px;
    align-items: center;
    justify-items: center;
  }

  .grid-item {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .grid-item img {
    height: 70px;
    width: auto;
    object-fit: contain;
    opacity: 0.88;
    transition: opacity 0.25s ease, transform 0.25s ease;
  }

  .grid-item img:hover {
    opacity: 1;
    transform: scale(1.1);
  }

  @media (max-width: 1024px) {
    .tools-grid {
      grid-template-columns: repeat(5, 1fr);
    }
  }

  @media (max-width: 768px) {
    .tools-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 28px 16px;
    }

    .grid-item img {
      height: 52px;
      opacity: 0.9;
    }
  }
</style>
